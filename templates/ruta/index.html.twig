{% extends 'base.html.twig' %}

{% block title %}Ruta index{% endblock %}

{% block body %}
    <h1>Ruta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>DescripcionCorta</th>
                <th>DescripcionLarga</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rutum in rutas %}
            <tr>
                <td>{{ rutum.id }}</td>
                <td>{{ rutum.nombre }}</td>
                <td>{{ rutum.descripcionCorta }}</td>
                <td>{{ rutum.descripcionLarga }}</td>
                <td>{{ rutum.imageName }}</td>
                <td>{{ rutum.updatedAt ? rutum.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_ruta_show', {'id': rutum.id}) }}">show</a>
                    <a href="{{ path('app_ruta_edit', {'id': rutum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ruta_new') }}">Create new</a>
{% endblock %}
